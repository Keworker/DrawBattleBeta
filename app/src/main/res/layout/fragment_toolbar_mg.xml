<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ToolbarFragmentMG">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/toolbarLayoutMGF"
        android:gravity="center">
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <!--Red-->
                <ImageButton
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:id="@+id/rMGF"/>

                <!--Green-->
                <ImageButton
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:id="@+id/gMGF"/>

                <!--Blue-->
                <ImageButton
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:id="@+id/bMGF"/>

                <!--Yellow-->
                <ImageButton
                    android:id="@+id/yMGF"
                    android:layout_width="1dp"
                    android:layout_height="1dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <!--Orange-->
                <ImageButton
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:id="@+id/oMGF"/>

                <!--Black (schwarz)-->
                <ImageButton
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:id="@+id/schMGF"/>

                <!--Brown-->
                <ImageButton
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:id="@+id/brMGF"/>

                <!--Purple-->
                <ImageButton
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:id="@+id/pMGF"/>
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/paintModeMGF"/>

        <ImageButton
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/lineModeMGF"/>

        <ImageButton
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/eraserModeMGF"/>

        <ImageButton
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/stickerAddMGF"/>

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/strokeWidthMGF"/>
    </LinearLayout>
</FrameLayout>