<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.drawtournament.DrawTournamentActivity"
    android:background="@color/menu_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/onLayoutDT">
        <Button
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/timerDT"

            android:text="00:00"
            style="@style/Buttons"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="center"
            style="@style/topicText"
            android:text="@string/wait"
            android:id="@+id/taskDT"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:id="@+id/underLayoutDT">
        <com.samsung.drawbattle.classes.KeworkerCanvas
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/canvasDT"/>

        <FrameLayout
            android:id="@+id/fragmentDT"
            android:layout_width="1dp"
            android:layout_height="1dp"/>
    </LinearLayout>
</LinearLayout>