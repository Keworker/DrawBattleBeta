        <activity
            android:name=".activities.Menu"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.drawtournament.DrawTournamentActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
